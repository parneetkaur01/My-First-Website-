  <script>
    // ------------------------
    // Small progressive enhancements & interactions
    // ------------------------

    // Show modal
    const modal = document.getElementById('modal');
    const openBtns = document.querySelectorAll('#open-book, #book-now-btn');
    const closeBtns = document.querySelectorAll('#close-modal, #close-modal-2');

    function showModal(){
      modal.style.display = 'flex';
      modal.setAttribute('aria-hidden','false');
      // trap focus simplistic:
      document.querySelector('.modal').focus();
    }
    function hideModal(){
      modal.style.display = 'none';
      modal.setAttribute('aria-hidden','true');
    }
    openBtns.forEach(b => b.addEventListener('click', (e)=>{ e.preventDefault(); showModal(); }));
    closeBtns.forEach(b => b.addEventListener('click', ()=> hideModal()));
    modal.addEventListener('click', (e)=>{ if(e.target === modal) hideModal(); });

    // Booking handler (frontend only - replace with fetch to server endpoint)
    function handleBooking(e){
      e.preventDefault();
      const f = e.target;
      const data = new FormData(f);
      const name = data.get('name') || '—';
      const service = data.get('service') || 'Anfrage';
      // simulate success
      const msg = document.getElementById('booking-msg');
      msg.textContent = `Danke ${name}! Wir haben deine Anfrage für "${service}" erhalten. Wir melden uns per E-Mail.`;
      // clear fields lightly
      f.reset();
      // keep modal open briefly to show message
      return false;
    }

    // IntersectionObserver for reveal animations
    const reveals = document.querySelectorAll('.reveal');
    const io = new IntersectionObserver((entries)=>{
      entries.forEach(en=>{
        if(en.isIntersecting){
          setTimeout(()=> en.target.classList.add('show'), (en.target.dataset.delay||0));
          io.unobserve(en.target);
        }
      })
    }, {threshold:0.12});
    reveals.forEach(r => io.observe(r));

    // Keyboard accessibility: ESC closes modal
    document.addEventListener('keydown', (e)=>{
      if(e.key === 'Escape' && modal.style.display === 'flex') hideModal();
    });

    // small micro-interaction: accessible focus styles
    document.addEventListener('focusin', (e)=>{
      const t = e.target;
      if(t.classList && (t.classList.contains('card') || t.tagName === 'A' || t.tagName === 'BUTTON' || t.tagName === 'INPUT')){
        t.style.outline = '3px solid rgba(255,184,107,0.12)';
        t.style.outlineOffset = '3px';
      }
    });
    document.addEventListener('focusout', (e)=>{
      const t = e.target;
      if(t.style) { t.style.outline = ''; t.style.outlineOffset = ''; }
    });

    // Tiny progressive enhancement: presence of touch
    if('ontouchstart' in window) document.body.classList.add('touch');

    // Ensure focusability for cards
    document.querySelectorAll('.card').forEach(c=> c.setAttribute('role','article'));

  </script>
</body>
